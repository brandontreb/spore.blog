<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head'); %>
  <script src="/scripts/simplemde.min.js"></script>
  <link rel="stylesheet" href="/styles/simplemde.min.css">
</head>

<body class="container">
  <header>
    <%- include('./partials/header'); %>
  </header>
  <main>
    <content>

      <p>
        <% if(menu_item.url) { %>
        <form method="post" action="/admin/menus/item?url=<%- encodeURIComponent(menu_item.url) %>&_method=put" style="display:inline">
        <% } else { %>
        <form method="post" action="/admin/menus/item" style="display:inline">
        <% } %>
          <label for="url">URL:</label>
          <input placeholder="/example/" type="text" id="url" name="url" value="<%- menu_item.url ? decodeURIComponent(menu_item.url) : '' %>">
          <label for="name">Name:</label>
          <input placeholder="" type="text" id="name" name="name" value="<%- menu_item.name %>">
          <label for="name">Order:</label>
          <input placeholder="" type="number" id="weight" name="weight" value="<%- menu_item.weight %>">
          <br />
          <!-- Back Button-->
          <button type="button" id="backButton" class="button" onclick="window.location.href='/admin/menus'"><span class="arrow">‚Üê</span>Back</button>
          <% if(menu_item.url) { %>
          <!-- Update Button-->
          <button class="button-secondary" id="updateButton" class="button" type="submit">Update Menu Item</button>
          <% } else { %>
          <!-- Create Button-->
          <button class="button-secondary" id="createButton" class="button" type="submit">Add Menu Item</button>
          <% } %>     
          
        </form>
        <% if(menu_item.url) { %>
        <!-- Delete Button-->
        <form method="post" action="/admin/menus/item?url=<%- encodeURIComponent(menu_item.url) %>&_method=delete" style="display:inline" onsubmit="return confirm('Are your sure you want to delete this page?');">
          <button type="submit" id="deleteButton" class="button-danger">Delete Menu Item</button>
        </form>
        <% } %>
      </p>

    </content>
  </main>
  <footer>
    <%- include('./partials/footer'); %>
  </footer>

</html>