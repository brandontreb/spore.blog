<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head'); %>
  <script src="/scripts/simplemde.min.js"></script>
  <link rel="stylesheet" href="/styles/simplemde.min.css">
</head>

<body class="container">
  <header>
    <%- include('./partials/header'); %>
  </header>
  <main>
    <content>      
      <!-- Add Button-->
      <button type="button" onclick="window.location.href='/admin/menus/new_item'">New Menu Item</button>
      <h3>Main</h3>
      <table>
        <thead>
          <tr>
            <th>URL</th>
            <th>Name</th>
            <th>Order</th>         
            <th>&nbsp;</th>     
          </tr>
        </thead>
        <% menu.forEach(m => { %>
        <% encodedUrl = encodeURIComponent(m.url) %>
        <tr>
          <td>
            <%= m.url %>
          </td>
          <td>
            <%= m.name %>
          </td>
          <td>
            <%= m.weight %>
          </td>
          <td style="text-align:center">
            <a href="/admin/menus/item?url=<%= encodedUrl %>">Edit</a>
          </td>
        </tr>
        <% }) %>        
      </table>      
    </content>
  </main>
  <footer>
    <%- include('./partials/footer'); %>
  </footer>
</body>

</html>